{% extends 'Pokemons/BasePokemon.html.twig' %}
    {% block body %}
        <h2>Listado de Pokemons </h2>
        <div class="row row-cols-1 row-cols-md-2">
            {% for pokemon in pokemonList %}
                <div class="col mb-4">
                    <div class="card" style="width: 18rem;">
                        <img src="{{pokemon.image}}" class="card-img-top">
                        <div class="card-body">
                            <h5 class="card-title">{{pokemon.name}} Nº {{pokemon.code}}</h5>
                            <p class="card-text">{{pokemon.description}}</p>
                            <a href="#" class="btn btn-primary">Más Info</a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% endblock %}